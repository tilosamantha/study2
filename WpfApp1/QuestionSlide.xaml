        <RadioButton x:Name="Option1" Content="{}{option}" HorizontalAlignment="Left" Margin="166,283,0,0" VerticalAlignment="Top" Height="27" Width="114"/>
        <RadioButton x:Name="Option2" Content="{}{option}" HorizontalAlignment="Left" Margin="166,364,0,0" VerticalAlignment="Top" Height="27" Width="132"/>
        <Rectangle x:Name="Background" HorizontalAlignment="Left" Height="192" Margin="166,10,0,0" VerticalAlignment="Top" Width="446" Fill="White"/>
        <Label x:Name="testLabel" Content="testLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="125" Margin="166,58,0,0" VerticalAlignment="Top" Width="446" FontSize="36" FontFamily="Onyx"/>
    </Grid>
</Page>
